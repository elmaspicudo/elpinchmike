{% extends '::base.html.twig' %}
{% block placeholder -%}
<div class="row">
    <div class="col-lg-12">
        
        <div class="clearfix">
            <div class="class="pull-left"">
                <div class="reloj">Tu tiempo: </div>
                <div class="reloj" id="Horas">00</div>
                <div class="reloj" id="Minutos">:00</div>
                <div class="reloj" id="Segundos">:00</div>
                <div class="reloj" id="Centesimas">:00</div>
            </div>
            <div class="pull-right top-page-ui">
            	<a href="{{ path('solicitud_inv')}}" class="btn btn-primary pull-right">
                    <i class="fa fa-plus-circle fa-lg"></i> Mis estudios
                </a>               
                <a href="{{ path('documentos_solicitud', { 'solicitud': entity.solicitud }) }}" class="btn btn-success pull-right">
                    <i class="fa fa-plus-circle fa-lg"></i> Siguiente
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock -%}
{% block body -%}
<div class="row">
<div class="col-lg-12">
<div class="main-box no-header clearfix">
<div class="main-box-body clearfix">
{{ form_start(edit_form, {'attr': {'class': 'form_transaccion_edit'}}) }}	
	<div class="row">
	    {{ form_rest(edit_form) }}
	</div>
	<div class="row">
	    	<button class="btn btn-success" type="submit">Guardar</button>
	        <button class="btn btn-default" type="reset">Limpiar</button>	        
	</div>
    {{ form_end(edit_form) }}                     
 </div>
</div>
</div>
     
{% endblock %}
{% block js %}
<script type="text/javascript">
$(document).ready(function() {
    
var centesimas = 0;
var segundos = 0;
var minutos = 0;
var horas = 0;

control = setInterval(cronometro,10);
function cronometro () {
    if (centesimas < 99) {
        centesimas++;
        if (centesimas < 10) { centesimas = "0"+centesimas }
        Centesimas.innerHTML = ":"+centesimas;
    }
    if (centesimas == 99) {
        centesimas = -1;
    }
    if (centesimas == 0) {
        segundos ++;
        if (segundos < 10) { segundos = "0"+segundos }
        Segundos.innerHTML = ":"+segundos;
    }
    if (segundos == 59) {
        segundos = -1;
    }
    if ( (centesimas == 0)&&(segundos == 0) ) {
        minutos++;
        if (minutos < 10) { minutos = "0"+minutos }
        Minutos.innerHTML = ":"+minutos;
    }
    if (minutos == 59) {
        minutos = -1;
    }
    if ( (centesimas == 0)&&(segundos == 0)&&(minutos == 0) ) {
        horas ++;
        if (horas < 10) { horas = "0"+horas }
        Horas.innerHTML = horas;
    }
}
       
    });
</script>
{% endblock %}
