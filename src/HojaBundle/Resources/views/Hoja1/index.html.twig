{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hoja1 list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Empresa</th>
                <th>Puesto</th>
                <th>Nombre</th>
                <th>Appaterno</th>
                <th>Apmaterno</th>
                <th>Personal</th>
                <th>Escolares</th>
                <th>Entornofamiliar</th>
                <th>Entornoeconomico</th>
                <th>Documentacion</th>
                <th>Laboral</th>
                <th>Desempeño</th>
                <th>Estabilidadlaboral</th>
                <th>Observaciones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hoja1_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.empresa }}</td>
                <td>{{ entity.puesto }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apPaterno }}</td>
                <td>{{ entity.apMaterno }}</td>
                <td>{{ entity.personal }}</td>
                <td>{{ entity.escolares }}</td>
                <td>{{ entity.entornoFamiliar }}</td>
                <td>{{ entity.entornoEconomico }}</td>
                <td>{{ entity.documentacion }}</td>
                <td>{{ entity.laboral }}</td>
                <td>{{ entity.desempeño }}</td>
                <td>{{ entity.estabilidadLaboral }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hoja1_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hoja1_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hoja1_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
