{% extends '::base.html.twig' %}
{% block placeholder -%}
<style>
  .btn-primary{
    width: 200px!important;
  }
 input[type="file"] {
    display: none;
}
.custom-file-upload {
    border: 1px solid #ccc;
    display: inline-block;
    padding: 6px 12px;
    cursor: pointer;
}
</style>
<div class="row">
    <div class="col-lg-12">
        
        <div class="clearfix">
            <h1 class="pull-left">Agregar cliente</h1>
           
        </div>
    </div>
</div>
{% endblock -%}
{% block body -%}
<div class="row">
<div class="col-lg-12">
<div class="main-box no-header clearfix">
<div class="main-box-body clearfix">

    <h1 class="text-center"><strong>Fotografias</strong> </h1>

    {{ form_start(form) }}
    <h2 class="text-center">
    <strong>Foto Interior de la Vivienda</strong>
    </h2>
    <ul  id="Imagenes_1" data-prototype="{{ form_widget(form.Imagenes_1.vars.prototype) | e }}">
        {% for Imagenes1 in form.Imagenes_1 %}
        <div class="col-md-12">
            {{ form_errors(Imagenes1) }}
            {{ form_widget(Imagenes1) }}
        </div> 
        {% endfor %}
    </ul>    
    <a href="#" class="col-md-4 col-md-offset-4 btn btn-info pull-left" id="add-Imagenes1">Agregar Foto</a>
	
</div>



<div class="div col-md-12 main-box no-header clearfix">

    <h2 class="text-center"><strong>Foto Exterior de la Vivienda</strong> </h2>
           <ul  id="Imagenes_2" data-prototype="{{ form_widget(form.Imagenes_2.vars.prototype) | e }}">
        {% for Imagenes2 in form.Imagenes_2 %}
        <div class="col-md-12">
            {{ form_errors(Imagenes2) }}
            {{ form_widget(Imagenes2) }}
        </div> 
        {% endfor %}
    </ul>    
    <a href="#" class="col-md-4 col-md-offset-4 btn btn-info pull-left" id="add-Imagenes2">Agregar Foto</a>
    {{ form_end(form) }}
 </div>
</div>
</div>
   
 <script>

     var emailCount = '{{ form.Imagenes_1 | length }}';
     var emailCount1 = '{{ form.Imagenes_2 | length }}';
     $('div.col-lg-6:nth-child(4)').hide()
     $('div.col-lg-6:nth-child(5)').hide()
    jQuery(document).ready(function() {
        jQuery('#add-Imagenes1').click(function() {
            var emailList = jQuery('#Imagenes_1');

            // graba la plantilla prototipo
            var newWidget = emailList.attr('data-prototype');
            // sustituye el "__name__" usado en el id y name del prototipo con un
            // número que es único en tus correos termina con el
            // atributo name viéndose como name="contact[emails][2]"
            newWidget = newWidget.replace(/__name__/g, emailCount);
            emailCount++;
            // crea un nuevo elemento lista y lo añade a la lista
            var newLi = jQuery('<div></div>').html(newWidget);
            newLi.appendTo(jQuery('#Imagenes_1'));

            return false;
        });


        jQuery('#add-Imagenes2').click(function() {
            var emailList1 = jQuery('#Imagenes_2');

            // graba la plantilla prototipo
            var newWidget1 = emailList1.attr('data-prototype');
            // sustituye el "__name__" usado en el id y name del prototipo con un
            // número que es único en tus correos termina con el
            // atributo name viéndose como name="contact[emails][2]"
            newWidget1 = newWidget1.replace(/__name__/g, emailCount1);
            emailCount1++;
            // crea un nuevo elemento lista y lo añade a la lista
            var newLi1 = jQuery('<div></div>').html(newWidget1);
            newLi1.appendTo(jQuery('#Imagenes_2'));

            return false;
        });
    });
</script>
{% endblock %}
