{% extends '::base.html.twig' %}

{% block body -%}
    <h1>seguros list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Aseguradora</th>
                <th>Tiposeguro</th>
                <th>Mensualidad</th>
                <th>Vigencia</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('seguros_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.aseguradora }}</td>
                <td>{{ entity.tipoSeguro }}</td>
                <td>{{ entity.mensualidad }}</td>
                <td>{% if entity.vigencia %}{{ entity.vigencia|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <a  href="{{ path('seguros_show', { 'id': entity.id }) }}" class="table-link">
	<span class="fa-stack">
	<i class="fa fa-square fa-stack-2x"></i>
	<i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
	</span>
</a>
                    <a href="{{ path('seguros_edit', { 'id': entity.id }) }}" class="table-link">
	<span class="fa-stack">
	<i class="fa fa-square fa-stack-2x"></i>
	<i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
	</span>
</a>
                    </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('seguros_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
