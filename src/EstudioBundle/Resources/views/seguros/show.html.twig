{% extends '::base.html.twig' %}

{% block body -%}
    <h1>seguros</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Aseguradora</th>
                <td>{{ entity.aseguradora }}</td>
            </tr>
            <tr>
                <th>Tiposeguro</th>
                <td>{{ entity.tipoSeguro }}</td>
            </tr>
            <tr>
                <th>Mensualidad</th>
                <td>{{ entity.mensualidad }}</td>
            </tr>
            <tr>
                <th>Vigencia</th>
                <td>{{ entity.vigencia|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <a  href="{{ path('seguros') }}" class="btn btn-warning">Regresar</a>
        <a href="{{ path('seguros_edit', { 'id': entity.id }) }}" class="btn btn-success">Editar</a>
    {{ form(delete_form) }}
{% endblock %}
