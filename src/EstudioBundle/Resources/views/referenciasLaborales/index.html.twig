{% extends '::base.html.twig' %}

{% block body -%}
    <h1>referenciasLaborales list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Empresa</th>
                <th>Giro</th>
                <th>Telefono</th>
                <th>Domicilio</th>
                <th>Ciudad</th>
