{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
<div class="col-lg-12">
<div class="main-box no-header clearfix">
<div class="main-box-body clearfix">
    <h1>Editar usuario</h1>
   
	{{ form_start(edit_form, {'attr': {'class': 'form_transaccion_edit'}}) }}		
    	<div class="form-group">
	        <label>Nombre de usuario</label>
	            {{ form_widget(edit_form.userName, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.userName) }}</span> 
	    </div>
	    <div class="form-group">
	        <label>Nombre</label>
	            {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.nombre) }}</span> 
	    </div>
	    <div class="form-group">
	        <label>Apellido paterno</label>
	            {{ form_widget(edit_form.aPaterno, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.aPaterno) }}</span> 
	    </div>
	    <div class="form-group">
	        <label>Apellido materno</label>
	            {{ form_widget(edit_form.aMaterno, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.aMaterno) }}</span> 
	    </div>
	    <div class="form-group">
	        <label>Correo</label>
	            {{ form_widget(edit_form.correo, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.correo) }}</span> 
	    </div>
	    <div class="form-group">
	        <label>Password</label>
	            {{ form_widget(edit_form.password.first, {'attr': {'class': 'form-control'}}) }}	        
	    </div>
	    <div class="form-group">
	        <label>Confirma password</label>
	            {{ form_widget(edit_form.password.second, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.password) }}</span> 
	    </div>
	    <div class="form-group">
	        <label>Rol</label>
	            {{ form_widget(edit_form.role, {'attr': {'class': 'form-control'}}) }}
	        <span class="errorMsg">{{ form_errors(edit_form.role) }}</span> 
	    </div>
		<button class="btn btn-success" type="submit">Guardar</button>
        <button class="btn btn-default" type="reset">Limpiar</button>
        <a class="btn btn-warning" href="{{ path('user') }}">Limpiar</a>
    {{ form_end(edit_form) }}                     
  </div>
</div>
</div>
</div>      
{% endblock %}