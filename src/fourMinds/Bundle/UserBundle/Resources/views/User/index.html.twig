{% extends '::base.html.twig' %}
{% block placeholder -%}
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active"><span>Usuarios</span></li>
        </ol>
        <div class="clearfix">
            <h1 class="pull-left">Usuarios</h1>
            <div class="pull-right top-page-ui">
                <a href="{{ path('user_new')}}" class="btn btn-primary pull-right">
                    <i class="fa fa-plus-circle fa-lg"></i> Agregar Usuario
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock -%}
{% block body -%}
<div class="row">
<div class="col-lg-12">
<div class="main-box no-header clearfix">
<div class="main-box-body clearfix">
<div class="table-responsive">
<table class="table user-list table-hover">
<thead>
<tr>
<th><span>Usuario</span></th>
<th>Nombre</th>
<th>Apellido paterno</th>
<th>Apellido materno</th>
<th><span>Email</span></th>
<th><span>Fecha de registro</span></th>
<th>Operaciones</th>
</tr>
</thead>
<tbody>
{% for entity in entities %}         
            <tr>
                <td>
                    <img src="{{ asset(entity.perfil.file.file|default('uploads/default-user.jpg'))}}" alt="">
                    <a href="{{ path('user_show', { 'id': entity.id }) }}" class="user-link">{{ entity.userName }}</a>
                   
                </td>                 
                <td>{{ entity.nombre }}</td>  
                <td>{{ entity.aPaterno }}</td>            
                <td>{{ entity.aMaterno }}</td>           
                <td>{{ entity.correo }}</td> 
                <td>{% if entity.dateCreate %}{{ entity.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>                            
                <td style="width: 20%;">
                    <a href="{{ path('user_show', { 'id': entity.id }) }}" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="table-link">
                            <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                            </span>
                    </a>
                </td>
            </tr>
        {% endfor %}
</tbody>
</table>
</div>
</div>
</div>
</div>


{% endblock %}
