{% extends '::base.html.twig' %}
{% block placeholder -%}
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active"><span>Forwardings</span></li>
        </ol>
        <div class="clearfix">
            <h1 class="pull-left">Forwardings</h1>
            <div class="pull-right top-page-ui">
                <a href="{{ path('forwardings_new')}}" class="btn btn-primary pull-right">
                    <i class="fa fa-plus-circle fa-lg"></i> Agregar Forwardings
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock -%}
{% block body -%}
<div class="row">
<div class="col-lg-12">
<div class="main-box no-header clearfix">
<div class="main-box-body clearfix">
<div class="table-responsive">
<table class="table user-list table-hover">
<thead>
        <thead>
            <tr>
                <th>Source</th>
                <th>Destination</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('forwardings_show', { 'id': entity.id }) }}">{{ entity.source }}</a></td>
                <td>{{ entity.destination }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('forwardings_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('forwardings_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
           {% endfor %}
</tbody>
</table>
</div>
</div>
</div>
</div>


{% endblock %}
