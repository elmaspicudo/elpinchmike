{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-lg-12">
        <div class="main-box">
            <header class="main-box-header clearfix">
                <h2>Forwardings</h2>
            </header>  
            <div class="main-box-body clearfix">
                   <table class="record_properties">
                        <tbody>
                            <tr>
                                <th>Source</th>
                                <td>{{ entity.source }}</td>
                            </tr>
                            <tr>
                                <th>Destination</th>
                                <td>{{ entity.destination }}</td>
                            </tr>
                        </tbody>
                    </table>
                   <div class="">
                        <a href="{{ path('forwardings') }}" class="btn btn-primary pull-right">
                            <i class="fa fa-mail-forward fa-lg"></i> Regresar
                        </a>
                        {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-trash-o fa-lg"></i> Eliminar
                            </button>
                        {{ form_end(delete_form) }}
                   </div>
                                           
            </div>          
        </div>      
    </div>  
</div>
   
{% endblock %}
