{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
	<div class="col-lg-12">
		<div class="main-box">
			<header class="main-box-header clearfix">
				<h2>Crear usuarios</h2>
			</header>  
			<div class="main-box-body clearfix">
				   {{ form_start(form, {'attr': {'class': 'form_transaccion_edit'}}) }} 
				   {{ form_row(form.email, { 'label' : 'Email', 'attr' : { 'class' : 'form-control' }}) }}
				   {{ form_row(form.password, { 'label' : 'Password', 'attr' : { 'class' : 'form-control' }}) }}
				   <div class="">
				   		<button type="submit" class="btn btn-success pull-right">
							<i class="fa fa-plus-circle fa-lg"></i> Add user
						</button>
						<button type="reset" class="btn btn-warning pull-right">
							<i class="fa fa-magic fa-lg"></i> Limpiar
						</button>
				   		<a href="{{ path('users') }}" class="btn btn-primary pull-right">
							<i class="fa fa-mail-forward fa-lg"></i> Regresar
						</a>
				   </div>
				            {{ form_end(form) }}					   
			</div>			
		</div>		
	</div>	
</div>
   
{% endblock %}
