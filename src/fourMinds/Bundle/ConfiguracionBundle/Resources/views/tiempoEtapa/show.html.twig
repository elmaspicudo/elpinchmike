{% extends'::base.html.twig' %}
{% block placeholder -%}
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active"><span>Clientes</span></li>
        </ol>        
        <div class="clearfix">
            <h1 class="pull-left">Cliente</h1>
            <div class="pull-right top-page-ui">
                <a href="{{ path('cliente_new')}}" class="btn btn-primary pull-right">
                    <i class="fa fa-plus-circle fa-lg"></i> Nuevo Cliente
                </a>
            </div>
        </div>
        
    </div>
</div>
{% endblock -%}
