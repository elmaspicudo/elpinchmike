            </tr>
            <tr>
                <th>Amarillo</th>
                <td>{{ entity.tiempoAmarillo }}</td>
            </tr>
            <tr>
                <th>Rojo</th>
                <td>{{ entity.tiempoRojo }}</td>
            </tr>
        </tbody>
    </table>

        <a  href="{{ path('tiempoetapa') }}" class="btn btn-warning">Regresar</a>
        <a href="{{ path('tiempoetapa_edit', { 'id': entity.id }) }}" class="btn btn-success">Editar</a>
    {{ form(delete_form) }}
</div>
</div>
</div>
</div>
  
