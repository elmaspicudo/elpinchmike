{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
	<div class="col-lg-12">
		<div class="main-box">
			<header class="main-box-header clearfix">
				<h2>Editar forwardings</h2>
			</header>  
			<div class="main-box-body clearfix">
				   {{ form_start(edit_form, {'attr': {'class': 'form_transaccion_edit'}}) }} 
				   {{ form_row(edit_form.source, { 'label' : 'Source', 'attr' : { 'class' : 'form-control' }}) }}
				   {{ form_row(edit_form.destination, { 'label' : 'Destination', 'attr' : { 'class' : 'form-control' }}) }}
				   <div class="">
				   		<button type="submit" class="btn btn-success pull-right">
							<i class="fa fa-plus-circle fa-lg"></i> Add forwardings
						</button>
						<button type="reset" class="btn btn-warning pull-right">
							<i class="fa fa-magic fa-lg"></i> Limpiar
						</button>
				   		<a href="{{ path('forwardings') }}" class="btn btn-primary pull-right">
							<i class="fa fa-mail-forward fa-lg"></i> Regresar
						</a>
				   </div>
				            {{ form_end(edit_form) }}
				   <div class="">
				   		{{ form_start(delete_form) }}
				   			<button type="submit" class="btn btn-primary">
								<i class="fa fa-trash-o fa-lg"></i> Eliminar
							</button>
				   		{{ form_end(delete_form) }}
				   </div>					   
			</div>			
		</div>		
	</div>	
</div>
   
{% endblock %}